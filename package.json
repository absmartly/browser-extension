{
  "name": "absmartly-browser-extension",
  "displayName": "Absmartly browser extension",
  "version": "0.0.1",
  "description": "A basic Plasmo extension.",
  "author": "Jonas Alves",
  "scripts": {
    "dev": "plasmo dev --src-path=.",
    "build": "plasmo build --src-path=.",
    "package": "plasmo package --src-path=.",
    "test": "playwright test",
    "test:ui": "playwright test --ui"
  },
  "dependencies": {
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "@heroicons/react": "^2.0.18",
    "axios": "^1.6.0",
    "clsx": "^2.0.0",
    "@plasmohq/storage": "^1.9.0"
  },
  "devDependencies": {
    "@ianvs/prettier-plugin-sort-imports": "4.1.1",
    "@types/chrome": "0.0.258",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "prettier": "3.2.4",
    "typescript": "5.3.3",
    "tailwindcss": "^3.4.0",
    "postcss": "^8.4.32",
    "autoprefixer": "^10.4.16",
    "plasmo": "0.90.5",
    "@playwright/test": "^1.40.0"
  },
  "manifest": {
    "host_permissions": [
      "https://*/*",
      "http://*/*"
    ],
    "permissions": [
      "storage",
      "activeTab",
      "tabs",
      "scripting",
      "cookies"
    ]
  }
}

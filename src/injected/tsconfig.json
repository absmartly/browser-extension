{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": false,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "declaration": false,
    "sourceMap": false,
    "removeComments": true,
    "lib": ["DOM", "ES2020"]
  },
  "include": [
    "visual-editor-main.ts",
    "modules/**/*.ts",
    "../utils/selector-generator.ts"
  ],
  "exclude": [
    "build/**/*"
  ]
}